<odoo>
    <data>

        <record id="ks_global_discount_invoice_view_form" model="ir.ui.view">
            <field name="name">ks.global.discount.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[1]/group" position="after">
                    <div class="ks_container">
                        <field name="ks_enable_discount" invisible="1"/>
                        <field name="ks_amount_discount" invisible="1"/>
                        <label for="ks_global_discount_type" string="Universal Discount Type:"
                               invisible="ks_enable_discount == False or ks_amount_discount == 0"/>
                        <field name="ks_global_discount_type" class="oe_inline"
                               invisible="ks_enable_discount == False or ks_amount_discount == 0" readonly="ks_enable_discount == False or state in ('posted', 'cancel')"/>
                    </div>
                    <div class="ks_container">
                        <label for="ks_global_discount_rate" string="Universal Discount :"
                                 invisible="ks_enable_discount == False or ks_amount_discount == 0"/>
                        <field name="ks_global_discount_rate" class="oe_inline"
                                 invisible="ks_enable_discount == False or ks_amount_discount == 0" readonly="ks_enable_discount == False or state in ('posted', 'cancel') or ks_global_discount_type == False"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="after">
                    <field name="ks_amount_discount" invisible="ks_enable_discount == False or ks_amount_discount == 0"/>
                    <field name="amount_total" string="Total with Discount" readonly="1" class="oe_inline" invisible="ks_enable_discount == False and ks_amount_discount == 0"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
