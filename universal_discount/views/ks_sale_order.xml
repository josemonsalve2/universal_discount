<odoo>
    <data>
        <record id="ks_discount_sale_order_form_inherited" model="ir.ui.view">
            <field name="name">ks.discount.sale_order.form.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/group" position="before">
                    <div class="ks_container">
                        <field name="ks_enable_discount" invisible="1"/>
                        <label for="ks_global_discount_type" string="Universal Discount Type:" invisible="ks_enable_discount == False and ks_amount_discount == 0"/>
                        <field name="ks_global_discount_type" class="oe_inline" invisible="ks_enable_discount == False and ks_amount_discount == 0" readonly="(ks_enable_discount == False and ks_amount_discount != 0) or (state != 'draft' and state != 'sent')"/>
                    </div>
                    <div class="ks_container">
                        <label for="ks_global_discount_rate" string="Universal Discount:" invisible="ks_enable_discount == False and ks_amount_discount == 0"/>
                        <field name="ks_global_discount_rate" class="oe_inline" invisible="ks_enable_discount == False and ks_amount_discount == 0" readonly="ks_enable_discount == False and ks_amount_discount != 0 or (state != 'draft' and state != 'sent')"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="after">
                    <field name="ks_amount_discount" invisible="ks_enable_discount == False and ks_amount_discount == 0"/>
                    <field name="amount_total" string="Total with Discount" readonly="1" class="oe_inline" invisible="ks_enable_discount == False and ks_amount_discount == 0"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>